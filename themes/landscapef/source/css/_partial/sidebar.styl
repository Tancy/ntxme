if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.tag-list-link,
.archive-list-link,
.category-list-link,
.tagcloud a
  display inline-block
  -webkit-border-radius 3px
  padding 4px 5px
  line-height 16px
  font-size font-size

.tag-list-link:hover,
.archive-list-link:hover,
.category-list-link:hover,
.tagcloud a:hover
  color color-background
  background color-link
  text-decoration none !important

.category-list-count,
.tag-list-count,
.archive-list-count
  padding-left 5px
  color color-grey
  font-size 0.85em
  vertical-align super

.tagcloud
  a
    margin-right: 5px
    display: inline-block
